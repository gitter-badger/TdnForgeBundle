<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tdn_pilot.type.tdn_entity_class">Tdn\PilotBundle\Form\Type\EntityType</parameter>
        <parameter key="tdn_pilot.type.tdn_many_reated_class">Tdn\PilotBundle\Form\Type\ManyRelatedType</parameter>
        <parameter key="tdn_pilot.type.tdn_single_related_class">Tdn\PilotBundle\Form\Type\SingleRelatedType</parameter>
    </parameters>

    <services>
        <service id="tdn_pilot.type.tdn_entity" class="%tdn_pilot.type.tdn_entity_class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="tdn_entity" />
        </service>
        <service id="tdn_pilot.type.tdn_many_reated" class="%tdn_pilot.type.tdn_many_reated_class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="tdn_many_related" />
        </service>
        <service id="tdn_pilot.type.tdn_single_related" class="%tdn_pilot.type.tdn_single_related_class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="tdn_single_related" />
        </service>
    </services>

</container>
