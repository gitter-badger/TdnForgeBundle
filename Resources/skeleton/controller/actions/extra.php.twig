{% block extras_methods %}

    /**
     * @return {{ entity }}Handler
     */
    protected function get{{ entity }}Handler()
    {
{% if format == 'annotation' -%}
        return $this->{{ entity|lowerfirst }}Handler;
{%- else -%}
{% if ((entity|length + bundle|replace({'_bundle': ''})|length) / 2) >= 31 %}
        return $this->container->get(
            '{{ bundle|underscore|lower|replace({'_bundle': ''})}}.handler.{{ entity|underscore|lower }}_handler'
        );
{% else %}
        return $this->container->get('{{ bundle|underscore|lower|replace({'_bundle': ''})}}.handler.{{ entity|underscore|lower }}_handler');
{% endif %}
{%- endif %}
    }
{% endblock extras_methods %}
