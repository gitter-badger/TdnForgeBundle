{
    "name": "tdn/forgebundle",
    "description": "Scaffolding tool for Symfony 2 (inspired by jboss forge).",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Passapera",
            "email": "vpassapera@gmail.com"
    	}
    ],
    "keywords": [
        "generator",
        "scaffolding",
        "sonata",
        "rest",
        "unit test",
        "tests",
        "automatic",
        "forge",
        "project",
        "code gen",
        "generation",
        "code",
        "controller",
        "manager",
        "form",
        "routing"
    ],
    "prefer-stable": true,
    "require": {
        "php": ">=5.5",
        "symfony/options-resolver": "~2.7",
        "symfony/finder": "~2.7",
        "symfony/class-loader": "~2.7",
        "sensio/generator-bundle": "~2.5",
        "doctrine/orm": "~2.5",
        "doctrine/doctrine-bundle": "~1.5",
        "tuck/converter-bundle": "~0.3",
        "sed/route-exporter-bundle": "dev-master",
        "tdn/php-types": "dev-develop",
        "fabpot/php-cs-fixer": "~1.10",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "require-dev": {
        "apigen/apigen": "dev-master",
        "phpunit/phpunit": "~4.7",
        "mockery/mockery": "~0.9",
        "doctrine/instantiator": "~1.0",
        "raulfraile/ladybug": "~1.0",
        "satooshi/php-coveralls": "~0.6",
        "bruli/php-git-hooks": "~1.3",
        "fzaninotto/faker": "~1.5",
        "liip/functional-test-bundle": "~1.2"
    },
    "suggest": {
        "jms/serializer-bundle": "~1.0",
        "friendsofsymfony/rest-bundle": "~1.7",
        "jms/di-extra-bundle": "[~1.5]Enables di annotations (for format=annotations) for all generators.",
        "nelmio/api-doc-bundle": "[~2.8]Enables Swagger documentation in controllers (--with-swagger)",
        "sonata-project/doctrine-orm-admin-bundle": "[~2.3]Enables Sonata scaffolding",
        "liip/functional-test-bundle": "[~1.2]Required when using controller test generation (--with-tests)",
        "phpunit/phpunit": "[~4.7]Required when using controller test generation (--with-tests)",
        "mockery/mockery": "[~0.9]Required when using test generation commands (--with-tests)",
        "fzaninotto/faker": "[~1.5]Required when using test generation commands (--with-tests)",
        "nelmio/cors-bundle": "[~1.4]Cross-origin resource sharing management."
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Tdn\\ForgeBundle\\": ""
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PhpGitHooks\\Application\\Composer\\ConfiguratorScript::buildConfig"
        ],
        "post-update-cmd": [
            "PhpGitHooks\\Application\\Composer\\ConfiguratorScript::buildConfig"
        ]
    }
}
