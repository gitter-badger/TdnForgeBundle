<?xml version="1.0"?>
<ruleset name="TdnForgeBundle Coding Standard">
    <description>Coding standard for TdnForgeBundle</description>
    <file>ClassLoader</file>
    <file>Command</file>
    <file>DependencyInjection</file>
    <file>Exception</file>
    <file>Generator</file>
    <file>Model</file>
    <file>Template</file>
    <file>Services</file>
    <file>Tests</file>
    <file>Traits</file>
    <file>TdnForgeBundle.php</file>
    <exclude-pattern>Tests/Fixtures/*</exclude-pattern>
    <arg name="extensions" value="php" />
    <arg value="sp" />
    <rule ref="PSR2" />
</ruleset>
